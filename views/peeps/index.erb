<style> 
  input[type=submit] {
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
    border-radius: 25px;
    background-color: #1DA1F2;  
    color: white;
    font-family: system-ui;
  }

  h1 {
    font-family: system-ui;
    text-align:center;
  }

  form {
    font-family: system-ui;
  }

  div {
    font-family: system-ui;
    padding: 10px;
  }  
</style>

<h1>Peeps</h1>
<br>
<div>
<form action="http://localhost:9292/peeps/new">
  <input type="submit"  class="active" value="Peep">
</form>
</div>
  <% @peeps.reverse.each do |peep| %>
  <div style="border: thin solid black">
    <p><strong><%= peep.user_name %></strong> peeped: </p>
    <p style="text-align:center"><%= peep.content %></p>
    <p style="text-align: right;">Peep time: <%= peep.creation_time[11..15] %></p>
  </div>
  <% end %>